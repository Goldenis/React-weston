@import "../stylesheet-options"

.instagram-preview
  @extend $inline-block
  width: (100 / 7)%
  padding-right: rem(5px)
  margin-bottom: rem(5px)
  overflow: hidden

  @media (max-width: 850px)
    width: (100 / 3)%

    &:nth-child(3n)
      padding-right: 0

  @media (min-width: 850px)
    &:nth-child(7n)
      padding-right: 0

.instagram-preview__img
  previewImage(rem(170px))
  height: 100%