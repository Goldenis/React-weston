.boutique-preview__img
  /*previewImage(rem(270px))*/
  max-height: rem(320px)
  overflow: hidden
  margin-left: rem(-5px)

  @media (max-width: 768px)
    background: #f1f1f1
    margin-left: 0

    img
      margin-left: auto !important
      margin-right: auto !important

  .boutique-preview:nth-child(3) &
    margin-left: 0

    img
      margin-right: 0

  img
    display: block
    margin: auto
    margin-right: rem(-5px)

.boutique-preview__content
  max-width: rem(350px)
  margin: auto
  padding: rem(0 10px)
  text-align: center

.boutique-preview__title
  @extend $home-sections-title

.boutique-preview__text
  @extend $home-sections-text