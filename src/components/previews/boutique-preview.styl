@import "../stylesheet-options"

.boutique-preview
  @extend $inline-block
  width: (100 / 3)%
  padding-right: rem(5px)
  margin: rem(0 auto 40px)
  text-decoration: none
  overflow: hidden

  &:nth-child(3n)
    padding-right: 0

  .base--mobile &
    @media (max-width: 768px)
      width: 100%
      padding-right: 0

