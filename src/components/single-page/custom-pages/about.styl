@import "../../stylesheet-options"

.about-page__image
  margin-bottom: rem(83px)

  img
    display: block
    margin: auto

.about-page__header
  max-width: rem(1090px)
  padding: rem(0 10px)
  margin: auto
  margin-bottom: rem(100px)

.about-page__title
  @extend $single-page-title
  font-size: rem(89px)
  margin-bottom: rem(20px)

.about-page__description
  @extend $single-page-preview
  margin-bottom: rem(40px)

  a
    color: #4a4a4a
    text-decoration: none

.about-page__content
  @extend $single-page-content

  p
    max-width: rem(700px)
    margin-left: auto
    margin-right: auto